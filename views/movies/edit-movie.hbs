<h2>Update existing movie</h2>
<form action="/movies/{{movie._id}}" method="post">
    <label for="title">Title</label><input type="text" id="title" name="title" value="{{movie.title}}">
    <label for="genre">Genre</label><input type="text" id="genre" name="genre" value="{{movie.genre}}">
    <label for="plot">Plot</label><input type="text" id="plot" name="plot" value="{{movie.plot}}">
    <label for="cast">Cast</label><select name="cast" id="cast" multiple>
    {{#each celebs}}
        <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
</select>
    <button type="submit">Submit</button>
</form>